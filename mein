from Campers import registrar_camper, evaluar_camper, listar_campers_inscritos, listar_campers_aprobados, listar_campers_bajo_rendimiento
from Trainers import registrar_trainer, listar_trainers
from Coordinadores import registrar_coordinador
from Rutas import crear_ruta_entrenamiento, asignar_camper_a_ruta
from reportes import listar_asignaciones, mostrar_resultados_modulos

def main():
    print("Bienvenido a CampusLands")
    while True:
        print("\nMenú Principal")
        print("1. Registrar Camper")
        print("2. Registrar Trainer")
        print("3. Registrar Coordinador")
        print("4. Crear Ruta de Entrenamiento")
        print("5. Asignar Camper a Ruta")
        print("6. Evaluar Camper")
        print("7. Generar Reportes")
        print("8. Salir")

        opcion = input("Seleccione una opción: ")
        
        if opcion == "1":
            id = input("ID: ")
            nombres = input("Nombres: ")
            apellidos = input("Apellidos: ")
            direccion = input("Dirección: ")
            acudiente = input("Acudiente: ")
            telefono_celular = input("Teléfono Celular: ")
            telefono_fijo = input("Teléfono Fijo: ")
            estado = input("Estado: ")
            riesgo = input("Riesgo: ")
            registrar_camper(id, nombres, apellidos, direccion, acudiente, telefono_celular, telefono_fijo, estado, riesgo)
        elif opcion == "2":
            id = input("ID: ")
            nombres = input("Nombres: ")
            apellidos = input("Apellidos: ")
            especialidad = input("Especialidad: ")
            registrar_trainer(id, nombres, apellidos, especialidad)
        elif opcion == "3":
            id = input("ID: ")
            nombres = input("Nombres: ")
            apellidos = input("Apellidos: ")
            registrar_coordinador(id, nombres, apellidos)
        elif opcion == "4":
            id = input("ID: ")
            nombre = input("Nombre: ")
            modulos = input("Módulos (separados por comas): ").split(',')
            capacidad_maxima = int(input("Capacidad Máxima: "))
            area_entrenamiento = input("Área de Entrenamiento: ")
            crear_ruta_entrenamiento(id, nombre, modulos, capacidad_maxima, area_entrenamiento)
        elif opcion == "5":
            id_camper = input("ID del Camper: ")
            id_ruta = input("ID de la Ruta: ")
            asignar_camper_a_ruta(id_camper, id_ruta)
        elif opcion == "6":
            id_camper = input("ID del Camper: ")
            modulo = input("Módulo: ")
            nota_teorica = float(input("Nota Teórica: "))
            nota_practica = float(input("Nota Práctica: "))
            nota_quiz_trabajos = float(input("Nota de Quizes y Trabajos: "))
            nota_final = evaluar_camper(id_camper, modulo, nota_teorica, nota_practica, nota_quiz_trabajos)
            print(f"Nota final del módulo {modulo}: {nota_final}")
        elif opcion == "7":
            print("1. Listar Campers Inscritos")
            print("2. Listar Campers Aprobados")
            print("3. Listar Trainers")
            print("4. Listar Campers con Bajo Rendimiento")
            print("5. Listar Asignaciones")
            print("6. Mostrar Resultados de Módulos")
            sub_opcion = input("Seleccione una opción: ")
            
            if sub_opcion == "1":
                inscritos = listar_campers_inscritos()
                for camper in inscritos:
                    print(camper)
            elif sub_opcion == "2":
                aprobados = listar_campers_aprobados()
                for camper in aprobados:
                    print(camper)
            elif sub_opcion == "3":
                trainers = listar_trainers()
                for trainer in trainers:
                    print(trainer)
            elif sub_opcion == "4":
                bajo_rendimiento = listar_campers_bajo_rendimiento()
                for camper in bajo_rendimiento:
                    print(camper)
            elif sub_opcion == "5":
                asignaciones = listar_asignaciones()
                for asignacion in asignaciones:
                    print(asignacion)
            elif sub_opcion == "6":
                resultados = mostrar_resultados_modulos()
                for resultado in resultados:
                    print(resultado)
        elif opcion == "8":
            break
        else:
            print("Opción no válida, por favor intente de nuevo.")

if __name__ == "__main__":
    main()